<div class="feed">
  <article class="news_item" data-ad="<%= news_ad_path(@conn, :show, slug(@ad)) %>">
    <%= render("_ad_header.html", assigns) %>
    <%= render("_ad_toolbar.html", assigns) %>
    <%= if @ad.story do %>
      <div class="news_item-content richtext">
        <p><%= @ad.story |> md_to_html |> raw %></p>
      </div>
    <% end %>
  </article>
</div>
