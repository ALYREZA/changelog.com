<div class="list_item">
<%= if @item.object do %>
  <h5 class="list_item-source"><%= EpisodeView.podcast_name_and_number(@item.object) %></h5>
<% end %>

  <h2 class="list_item-title"><%= link(@item.headline, to: @item.url) %></h2>
  <%= @item.story |> md_to_html |> raw %>

<%= if @item.image do %>
  <p>
    <%= link to: @item.url do %>
      <img src="<%= NewsItemView.image_url(@item, :large) %>" alt="<%= @item.headline %>">
    <% end %>
  </p>
<% end %>
</div>
