<table class="ui celled striped table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Website</th>
      <th>GitHub</th>
      <th>Twitter</th>
      <th>Sponsored Eps</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <%= for sponsor <- @sponsors do %>
    <tr>
      <td>
        <h4 class="ui image header">
          <img src="<%= logo_url(sponsor, :color_logo, :small) %>" class="ui image"/>
        </h4>
        <%= sponsor.name %>
      </td>
      <td><%= website_link(sponsor) %></td>
      <td><%= github_link(sponsor) %></td>
      <td><%= twitter_link(sponsor) %></td>
      <td><%= sponsorship_count(sponsor) %></td>
      <td class="center aligned">
        <div class="ui small basic buttons">
          <%= link to: admin_sponsor_path(@conn, :show, sponsor), class: "ui disabled button" do %>
            <i class="eye icon"></i>
            View
          <% end %>

          <%= link to: admin_sponsor_path(@conn, :edit, sponsor), class: "ui button" do %>
            <i class="edit icon"></i>
            Edit
          <% end %>

          <%= link to: admin_sponsor_path(@conn, :delete, sponsor), method: :delete, data: [confirm: "Are you sure?"], class: "ui button" do %>
            <i class="trash icon"></i>
            Delete
          <% end %>
        </div>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
