<article class="news_item news_item--sponsor">
  <%= render("_ad_header.html", assigns) %>
<%= if @ad.story do %>
  <div class="news_item-description">
    <p><%= @ad.story |> md_to_text %></p>
    <%= link "continue reading...", to: news_ad_path(@conn, :show, slug(@ad)), class: "news_item-description-continue" %>
  </div>
<% end %>
  <%= render("_ad_toolbar.html", assigns) %>
</article>
